<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_objetos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.raquel.juego.activity.ObjetosActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_marginLeft="130dp"
        android:id="@+id/puntosimagen"
        android:layout_marginTop="10dp"
        android:layout_width="111dp"
        android:layout_height="123dp"
        android:src="@drawable/puntuacion"/>

    <TextView
        android:layout_marginTop="135dp"
        android:id="@+id/txtPuntuacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/puntuacion"
        android:padding="10dp"/>

    <ImageView
        android:layout_marginLeft="130dp"
        android:id="@+id/vidaimagen"
        android:layout_marginTop="190dp"
        android:layout_width="111dp"
        android:layout_height="123dp"
        android:src="@drawable/vida"/>

    <TextView
        android:layout_marginTop="320dp"
        android:id="@+id/txtVida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/vida"
        android:padding="10dp"/>

</LinearLayout>
